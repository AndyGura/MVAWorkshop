<?xml version="1.0"?>
<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark">

    <fx:Metadata>
        [Event(name="saveLanguage", type="flash.events.DataEvent")]
    </fx:Metadata>

    <fx:Script><![CDATA[
        import com.andrewgura.vo.LangVO;

        [Bindable]
        public var lang:LangVO;

        private function onSaveButtonClick(event:MouseEvent):void {
            dispatchEvent(new DataEvent('saveLanguage', false, false, JSON.stringify({code: codeTextInput.text, name: nameTextInput.text})));
        }
        ]]>
  </fx:Script>

    <s:VGroup>
        <s:Label text="Lang code:" textAlign="right"/>
        <s:Label text="Lang name:" textAlign="right"/>
        <s:Button label="Save" click="onSaveButtonClick(event)"/>
    </s:VGroup>

    <s:VGroup>
        <s:TextInput id="codeTextInput" text="{lang.code}" width="100%"/>
        <s:TextInput id="nameTextInput" text="{lang.name}" width="100%"/>
    </s:VGroup>

</s:HGroup>
